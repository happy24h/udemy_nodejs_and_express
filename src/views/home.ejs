<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home Page</title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <style>
    .table-container {
      padding: 20px 15px;
    }
    .title {
      font-weight: 600;
      font-size: 30px;
      margin-bottom: 10px;
    }
    table {
      border-collapse: collapse;
      width: 100%;
    }

    th,
    td {
      padding: 8px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }

    tr:hover {
      background-color: #ccc;
    }
  </style>

  <body>
    <div class="topnav">
      <a class="active" href="/">Home</a>
      <a href="/create">Create Users</a>
      <a href="/edit">Edit Users</a>
    </div>
    <div class="table-container">
      <!-- data không nhận dưới dạng object nên phải chuyển thành kiều json -->
      <!-- <%= JSON.stringify(listUsers) %> -->
      <div class="title">List Users</div>
      <table>
        <tr>
          <th>ID</th>
          <th>Email</th>
          <th>Name</th>
          <th>City</th>
          <th>Action</th>
        </tr>
        <!-- <% for (var i = 0; i < listUsers.length; i++) { %>
        <tr>
          <td><%= listUsers[i].id%></td>
          <td><%= listUsers[i].email%></td>
          <td><%= listUsers[i].name%></td>
          <td><%= listUsers[i].city%></td>

          <td><button>Delete</button><button>Edit</button></td>
        </tr>
        <% } %>  -->
        <% listUsers.forEach(function(item) { %>
        <tr>
          <td><%= item.id%></td>
          <td><%= item.email%></td>
          <td><%= item.name%></td>
          <td><%= item.city%></td>

          <td>
            <button>Delete</button>
            <a href="/update">Edit</a>
          </td>
        </tr>

        <% }) %>
      </table>

      <ul class="timeline">
        <ul class="timeline"></ul>
      </ul>
    </div>
  </body>
</html>
